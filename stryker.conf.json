{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config uses Jest to run tests",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "testRunner": "jest",
  "testRunner_comment": "We use Jest to check if mutants are killed",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/products/products.service.ts"
  ],
  "jest": {
    "projectType": "custom",
    "configFile": "package.json",
    "enableFindRelatedTests": true
  }
}